{
	"name": "jonasleonhard.de",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite dev",
		"build": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite build && bun run postbuild",
		"postbuild": "pagefind --site build; cp -r build/pagefind static/pagefind",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/typography": "^0.5.15",
		"@types/bun": "^1.1.12",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.0.0-next.33",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"globals": "^15.0.0",
		"lucide-svelte": "^0.453.0",
		"mdsvex": "^0.11.2",
		"pagefind": "^1.1.1",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"shiki": "^1.22.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.5.0",
		"typescript-eslint": "^8.0.0",
		"vaul-svelte": "^1.0.0-next.1",
		"vite": "^5.4.4",
		"zod": "^3.23.8"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.2.1"
	}
}

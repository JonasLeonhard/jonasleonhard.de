{
	"name": "jonasleonhard.de",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite dev",
		"build": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite build && bun run postbuild",
		"postbuild": "pagefind --site build; rm -r static/pagefind; cp -r build/pagefind static/pagefind",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/enhanced-img": "^0.4.1",
		"@sveltejs/kit": "^2.8.5",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/typography": "^0.5.15",
		"@types/bun": "^1.1.14",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"lucide-svelte": "^0.462.0",
		"mode-watcher": "^0.5.0",
		"pagefind": "^1.2.0",
		"prettier": "^3.4.1",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"shiki": "^1.24.0",
		"svelte": "^5.2.10",
		"svelte-check": "^4.1.0",
		"svelte-inview": "^4.0.4",
		"svelte-sonner": "^0.3.28",
		"tailwindcss": "^3.4.15",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0",
		"vaul-svelte": "^1.0.0-next.3",
		"vite": "^6.0.1"
	},
	"dependencies": {
		"@threlte/core": "^8.0.0-next.31",
		"@threlte/extras": "^9.0.0-next.40",
		"clsx": "^2.1.1",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.3.0",
		"three": "^0.170.0"
	}
}

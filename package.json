{
	"name": "jonasleonhard.de",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite dev",
		"build": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite build && bun run postbuild",
		"postbuild": "pagefind --site build; rm -r static/pagefind; cp -r build/pagefind static/pagefind",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/enhanced-img": "^0.4.4",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/postcss": "^4.1.4",
		"@tailwindcss/typography": "^0.5.16",
		"@types/bun": "^1.2.10",
		"@types/eslint": "^9.6.1",
		"bits-ui": "^0.21.16",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"lucide-svelte": "^0.464.0",
		"mode-watcher": "^0.5.1",
		"pagefind": "^1.3.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"shiki": "^1.29.2",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.6",
		"svelte-inview": "^4.0.4",
		"svelte-sonner": "^0.3.28",
		"tailwindcss": "^4.1.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.0",
		"vaul-svelte": "^1.0.0-next.7",
		"vite": "^6.3.3"
	},
	"dependencies": {
		"@arisbh/marqueeck": "^0.5.1",
		"@threlte/core": "^8.0.2",
		"@threlte/extras": "^9.1.4",
		"clsx": "^2.1.1",
		"gsap": "^3.12.7",
		"svelte-portal": "^2.2.1",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1",
		"three": "^0.170.0"
	}
}
